<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.RegisterActivity"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar akun\nanda."
        android:textColor="@color/primary"
        android:fontFamily="@font/inter_bold"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan daftarkan akun anda"
        android:textColor="@color/highlight"
        android:fontFamily="@font/inter_regular"
        android:textSize="12sp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="  Nama Lengkap"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/primary">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/preffix_nama"
            android:drawableTint="@color/primary"
            android:inputType="text|textWebEmailAddress"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alamat Email"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="  Alamat Email"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/primary">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/preffix_email"
            android:drawableTint="@color/primary"
            android:inputType="text|textWebEmailAddress"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kata Sandi"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="  Kata Sandi"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/primary"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/primary">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterKataSandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/preffix_password"
            android:drawableTint="@color/primary"
            android:inputType="text|textPassword"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfirmasi Kata Sandi"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:layout_marginTop="12dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="  Konfirmasi Kata Sandi"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxStrokeColor="@color/black"
        app:hintTextColor="@color/primary"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/primary">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRegisterKonfirmasiKataSandi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/preffix_password"
            android:drawableTint="@color/primary"
            android:inputType="text|textPassword"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Daftar"
        android:textSize="16sp"
        android:fontFamily="@font/inter_regular"
        app:cornerRadius="12dp"
        android:layout_marginTop="24dp"
        />

</LinearLayout>